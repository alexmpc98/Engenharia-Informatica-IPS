@model IEnumerable<CineSetúbal.Filme>

@{
    ViewData["Title"] = "Estreia";
}

<h1>Estreia</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diretor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estreia)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
         @if(Model.Count() == 0)
            {
                <h2 align:"center">Não existem filmes em estreia</h2>
            }
            else { 
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diretor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estreia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atores)
            </td>
            
        </tr>
}
         }
    </tbody>
</table>
